<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:_10_Ejercicio1.ViewModels"
             x:Class="_10_Ejercicio1.MainPage">

    <ContentPage.BindingContext>
        <model:MainPageVM/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Entry
                x:Name="ntrBuscador"/>
            <Button
                x:Name="btnLupa"/>
        </HorizontalStackLayout>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label
                                x:Name="lblNombre"
                                Text="{Binding }"/>
                            <Label
                                x:Name="lblApellido"
                                Text="{Binding }"/>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>

</ContentPage>
