<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:PruebasEstilos.Resources"
             x:Class="PruebasEstilos.MainPage">
    <ContentPage.Resources>
        <LinearGradientBrush x:Key="resourceMainPage">
            <GradientStop Offset="0" Color="Blue"/>
            <GradientStop Offset="0.5" Color="Orange"/>
            <GradientStop Offset="1" Color="Yellow"/>
        </LinearGradientBrush>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Ellipse Fill ="{StaticResource recursoDiccionario}"
                     WidthRequest="400" HeightRequest="200"/>
            <Rectangle Background ="{StaticResource resourceMainPage}" WidthRequest="200" HeightRequest="500"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
