<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_08_Ejercicios.MainPage">
    <ScrollView>
        <Border Stroke="Purple" StrokeShape="RoundRectangle 30,30,0,0" StrokeThickness="10" Margin="10">
            <StackLayout Orientation="Vertical" Spacing="10" VerticalOptions="Center">
                <Button
                    Text="Boton 1"
                    Padding="10,5,10,5"
                    BorderColor="Black"
                    BorderWidth="5"
                    HorizontalOptions="Center"
                    />
                <Button
                    Text="Boton 2"
                    HorizontalOptions="Center"
                    />
                <Button
                    Text="Boton 3"
                    HorizontalOptions="Center"
                    />
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Nombre:"
                           Margin="0,5,10,0"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Entry MinimumWidthRequest="100"
                           BackgroundColor="LightBlue"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Border>
    </ScrollView>
</ContentPage>
