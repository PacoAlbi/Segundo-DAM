<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.LoginActivity"
    android:background="#BBBF94">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginTop="548dp"
        android:background="#605F5F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="548dp"
        android:background="#605F5F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toStartOf="@+id/loginEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/password"
        app:layout_constraintEnd_toStartOf="@+id/loginPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@drawable/borde_inputs"
        android:id="@+id/loginEmail"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:hint="  pepe@gmail.com"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@drawable/borde_inputs"
        android:id="@+id/loginPassword"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:padding="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:hint="  Enter your password"
        android:inputType="textPassword"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEmail" />

    <CheckBox
        android:background="#BBBF94"
        android:id="@+id/checkBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword" />

    <TextView
        android:textColor="#3C3D42"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Remember me?"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="208dp"
        android:text="Forgot password?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="OR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="404dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#9CCD62"
        android:textColor="#3C3D42"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/loginGoRegisterButton"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="596dp"
        android:text="SIGN UP"
        android:textColor="#3C3D42"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#DFA082"/>

</androidx.constraintlayout.widget.ConstraintLayout>