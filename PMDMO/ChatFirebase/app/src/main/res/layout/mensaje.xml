<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/miMensajeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linearMiMensaje"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/borde_redondo_mimensaje"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/miMensajeTxt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textColor="#3C3D42" />

                <TextView
                    android:id="@+id/fechaMiMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp"
                    android:text="12:30"
                    android:layout_marginEnd="160dp"
                    android:textColor="#3C3D42"
                    android:textSize="15sp"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/myLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/suMensajeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miMensajeLayout"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linearSuMensaje"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/borde_redondo_sumensaje"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/suMensajeTxt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textColor="#3C3D42"/>

                <TextView
                    android:id="@+id/fechaSuMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="-40dp"
                    android:text="12:30"
                    android:textColor="#3C3D42"
                    android:textSize="15sp"/>

            </LinearLayout>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>