<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appSuma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_home_24px"
        app:title="¡Vamos a sumar dos números!"
        app:titleTextColor="#000000"
        tools:layout_editor_absoluteX="19dp" />

    <ImageButton
        android:id="@+id/botonSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appSuma"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/sumaTotal"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="240dp"
        android:hint="Suma"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSuma" />

    <EditText
        android:id="@+id/primerNumero"
        android:layout_width="62dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="208dp"
        android:ems="10"
        android:hint="Num1"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/segundoNumero"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:hint="Num2"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>