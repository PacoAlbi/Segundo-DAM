<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_05_Ejercicio3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry
                x:Name="txtEntrada1"
                FontAttributes="Bold"
                BindingContext="{x:Reference txtEntrada2}"
                Text="{Binding Source={x:Reference time}}"
                />

            <Entry
                x:Name="txtEntrada2"
                FontAttributes="Italic"
                
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
