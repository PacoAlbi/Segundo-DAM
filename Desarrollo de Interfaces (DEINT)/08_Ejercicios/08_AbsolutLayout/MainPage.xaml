<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_08_AbsolutLayout.MainPage">

    <AbsoluteLayout Scale="10">

        <BoxView
            Color="Red"
            AbsoluteLayout.LayoutBounds="0,0,100,100"/>
        <BoxView
            Color="Blue"
            AbsoluteLayout.LayoutBounds="100,0,200,100"/>
        <BoxView
            Color="Green"
            AbsoluteLayout.LayoutBounds="0,100,300,100"/>
        <BoxView
            Color="Yellow"
            AbsoluteLayout.LayoutBounds="100,200,400,200"/>
        
    </AbsoluteLayout>

</ContentPage>
